//"use strict";

var companyModule = angular.module('companyModule', []);

companyModule.controller('companyController', ['$scope', 'companyModel', CompanyController]);

companyModule.controller('companyController', function ($scope, companyRepository) {
  "use strict";

  companyRepository.getAllCompanies().success(function (companies) {
    $scope.companies = companies;
  });

  $scope.createCompany = function () {
    alert("Create!");
  };

  $scope.editCompany = function () {
    alert("Edit!");
  };

});


companyModule.factory('companyRepository', function () {
  "use strict";

  return {
    getAllCompanies: function () {
      var url = '';
      return $http.get(url);
    }
  };
});

