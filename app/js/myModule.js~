var myModule = angular.module('myModule', []);

myModule.controller('myController', function($scope, companyRepository) {
    
  companyRepository.getAllCompanies().success(function(companies) {
    $scope.companies = companies
  });
    
  $scope.createCompany = function() {
  
  };
    
  $scope.editCompany = function() {
  
  };
    
});


myModule.factory('companyRepository', function() {
  return { 
    getAllCompanies: function() {
      var url = '';
      return $http.get(url);
    }
  };
});

